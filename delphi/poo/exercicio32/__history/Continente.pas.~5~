begin

end;

function TContinente.PaisMaiorPopulacao: TPais;
begin

end;

function TContinente.PaisMenorDimensao: TPais;
begin

end;

function TContinente.PaisMenorPopulacao: TPais;
begin

end;

function TContinente.PopulacaoTotal: real;
begin

end;

end.
